<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_badge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#A6FFA2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/badgeTitle"
        android:layout_width="410dp"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:gravity="center"
        android:lineSpacingExtra="10sp"
        android:text="Badge Title"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/staticBadgeCharacteristics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="248dp"
        android:background="#B6B6B6"
        android:gravity="center"
        android:lineSpacingExtra="10sp"
        android:text="Χαρακτηριστικά"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/staticBadgeCharacteristics"
        android:layout_marginTop="-104dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="52dp"


            android:fontFamily="monospace"
            android:gravity="center"
            android:lineSpacingExtra="10sp"
            android:text="Ημερομηνία: "
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/badgeDate"
            android:layout_width="wrap_content"
            android:layout_height="52dp"

            android:fontFamily="monospace"
            android:gravity="center"
            android:lineSpacingExtra="10sp"
            android:text="Ημερομηνία"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="52dp"

            android:fontFamily="monospace"
            android:gravity="center"
            android:lineSpacingExtra="10sp"
            android:text="Πόντοι: "
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/badgePoints"
            android:layout_width="wrap_content"
            android:layout_height="52dp"

            android:fontFamily="monospace"
            android:gravity="center"
            android:lineSpacingExtra="10sp"
            android:text="points"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/backBtn"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="278dp"
        android:backgroundTint="#BAB9B9"
        android:fontFamily="monospace"
        android:text="Πίσω"
        android:textColor="@color/black"
        android:typeface="normal" />

</LinearLayout>